@using EntityLayer;
@model Collection;

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">

    <div class="card-header">
        <h2>Collection Insert</h2>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Add", "Collection", FormMethod.Post, new { @class = "form-group" }))
        {

            @Html.Label("Collection Name")
            @Html.TextBoxFor(collection=>collection.CollectionName,new { @class = "form-control"})
            @Html.ValidationMessageFor(collection=>collection.CollectionName,"",new{@class="text-danger"})
            <br />

            @Html.Label("Creation Date")
            @Html.TextBoxFor(collection=>collection.CreationDate,new { @class = "form-control" ,@type="date"})
            <br />

            @Html.Label("Creation Time")
            @Html.TextBoxFor(collection=>collection.CreationTime,new { @class = "form-control" ,@type="time"})
            <br />

            @Html.Label("IsActive")
            <select class="form-control" name="IsActive">
                <option value="True">Aktif</option>
                <option value="False">Pasif</option>
            </select>
            <br />

            <input class="form-control btn btn-primary" type="submit" value="Collection Add" />
        }
    </div>
</div>
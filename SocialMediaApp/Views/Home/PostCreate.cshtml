@using EntityLayer;
@model Post;
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Create New Post</title>

    <!-- Bootstrap Css Import-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Post Create Css -->
    <link rel="stylesheet" type="text/css" href="~/user_interface/post_create/postCreate.css" />
</head>

<body>
    <div class="card-container">
        <div class="card col-sm-6">

            <div class="card-header">
                <div>Create New Post</div>
            </div>

            <div class="card-body">
                @using (Html.BeginForm("Add", "Post", FormMethod.Post, new { @class = "form-group", @enctype = "multipart/form-data" }))
                {
                    <label for="image_file" class="drop-container">
                        <span class="drop-title">Drop files here</span>
                        or

                        <input id="image_file" type="file" name="imgFiles" class="form-control" accept="image/*" onchange="changeContent();" />
                        @Html.ValidationMessageFor(post=>post.imgFiles,"",new{@class="text-danger"})
                        <br />
                    </label>

                    <br />
                    <div style="border:1px dashed black;padding:5px;width:30%;">

                        <img id="imageDisplay" src="https://flashresim.com/blog/wp-content/uploads/2019/03/resim-yukleme-sitesi-280x227.png" width="100%" height="200px" /><br><br>
                         <label id="imageSize"></label>
                    </div>
                    <br />
                }
            </div>
        </div>
    </div>

    <script src="~/user_interface/post_create/postCreate.js"></script>
</body>
</html>
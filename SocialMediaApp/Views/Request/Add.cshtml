@using EntityLayer
@model RequestUserModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Request Add</h2>
@using (Html.BeginForm("Add", "Request", FormMethod.Post, new { @class = "form-group" }))
{
    @Html.Label("Follower NickName")
    <select class="form-control">
        @foreach (var item in Model.UserModel)
        {
            <option>@item.NickName</option>
        }
    </select>
    <br />
    @Html.Label("Following NickName")
    <select class="form-control">
        @foreach(var item in Model.UserModel)
        {
            <option>@item.NickName</option>
        }
    </select>
    <br />
    @Html.Label("Request Time")
    {
        var model = Model.RequestModel.RequestTime;
        var requestTime = model.Microsecond;
        <select class="form-control">
            <option>@requestTime</option>
        </select>
    }   
    <br />
    @Html.Label("Request State")
    <select class="form-control">
        <option value="true">True</option>
        <option value="false">False</option>
    </select>
    <br />
    @Html.Label("IsActive")
    <select class="form-control" name="IsActive">
        <option value="True">Active</option>
        <option value="False">Passive</option>
    </select>
    <br />
    <input class="form-control" type="submit" value="Add" />
}




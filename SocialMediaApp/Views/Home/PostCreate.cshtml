@using EntityLayer;
@model Post;
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Create New Post</title>
    <link rel="stylesheet" href="~/user_interface/post_create/postCreate.css" />
    <!-- Bootstrap Css Import-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="card">
            <h2>Create Post</h2>
            @using (Html.BeginForm("Add", "User", FormMethod.Post, new { @class = "form-group", @enctype = "multipart/form-data" }))
            {
                @Html.Label("Upload Photo")

                <input id="image_file" type="file" name="imgFile" class="form-control" accept="image/*" onchange="changeContent();" />
                @Html.ValidationMessageFor(post=>post.imgFile,"",new{@class="text-danger"})
                <br />
                <div style="border:1px dashed black;padding:5px;width:30%;padding:10px;">
                    <img id="imageDisplay" src="https://flashresim.com/blog/wp-content/uploads/2019/03/resim-yukleme-sitesi-280x227.png" width="100%" height="250px" /><br><br>
                    <label id="imageSize"></label>
                </div>
                <br />

            }

        </div>
    </div>

    <script src="~/user_interface/post_create/postCreate.js"></script>
</body>
</html>
